<%= simple_form_for @person, url: persons_path do |f| %>
  <%= f.input :name %>
  <%= f.input :cpf,:input_html => { :maxlength => 15, :"data-mask" => "999-999-9999" } %>
  <%= f.input :cns %>
  <%= f.input :birthday, as: :date_time_picker, label: 'Data de Nascimento' %>
  <%= f.input :email, type: 'email' %>
  <%= f.input :phone_number %>
  <%= f.input :image %>
  <%= f.input :status %>
  <%= simple_fields_for :address do |a| %>
    <%= a.input :zipcode %>
    <%= a.input :street %>
    <%= a.input :number %>
    <%= a.input :complement, required: false %>
    <%= a.input :neighborhood %>
    <%= a.input :city %>
    <%= a.input :uf %>
    <%= a.input :ibge_code, required: false %>
  <% end %>
  <%= f.submit "Salvar", class: "btn btn-primary" %>
<% end %>
